<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_fragment_info"
    android:layout_marginTop="@dimen/margin_fragment_info"
    android:layout_marginRight="@dimen/margin_fragment_info"
    android:layout_marginBottom="@dimen/margin_fragment_info"
    tools:context="com.gmail.artemkrot.coronavirus.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/last_check_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_condensed_regular"
            android:paddingTop="@dimen/margin_fragment_info"
            android:textColor="@color/grey"
            android:textSize="@dimen/small_number_size" />

        <TextView
            android:id="@+id/total_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_condensed_regular"
            android:text="@string/no_data_text"
            android:textColor="@color/black"
            android:textSize="@dimen/big_number_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_condensed_regular"
            android:text="@string/text_confirmed"
            android:textColor="@color/black"
            android:textSize="@dimen/small_number_size" />

        <TextView
            android:id="@+id/total_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_condensed_regular"
            android:text="@string/no_data_text"
            android:textColor="@color/black"
            android:textSize="@dimen/big_number_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_condensed_regular"
            android:text="@string/text_deaths"
            android:textColor="@color/black"
            android:textSize="@dimen/small_number_size" />

        <TextView
            android:id="@+id/total_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_condensed_regular"
            android:text="@string/no_data_text"
            android:textColor="@color/black"
            android:textSize="@dimen/big_number_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_condensed_regular"
            android:text="@string/text_recovered"
            android:textColor="@color/black"
            android:textSize="@dimen/small_number_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</RelativeLayout>