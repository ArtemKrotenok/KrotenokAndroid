<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Austria-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/flag_height"
            android:background="@color/color_flag_red"
            android:orientation="vertical"
            android:weightSum="3">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_flag_red" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_flag_white" />
        </LinearLayout>

        <!--Poland-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/flag_height"
            android:layout_marginTop="@dimen/margin_flag"
            android:background="@color/color_flag_red"
            android:orientation="vertical"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_flag_white" />
        </LinearLayout>

        <!--Italy-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/flag_height"
            android:layout_marginTop="@dimen/margin_flag"
            android:background="@color/color_flag_red"
            android:orientation="horizontal"
            android:weightSum="3">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/flag_height"
                android:layout_weight="1"
                android:background="@color/color_flag_green" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/flag_height"
                android:layout_weight="1"
                android:background="@color/color_flag_white" />

        </LinearLayout>

        <!--Colombia-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/flag_height"
            android:layout_marginTop="@dimen/margin_flag"
            android:background="@color/color_flag_red"
            android:orientation="vertical"
            android:weightSum="4">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/color_flag_yellow" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_flag_blue" />
        </LinearLayout>

        <!--Madagascar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/flag_height"
            android:layout_marginTop="@dimen/margin_flag"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/color_flag_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_flag_green"
                android:orientation="vertical"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/color_flag_red" />

            </LinearLayout>
        </LinearLayout>

        <!--Thailand-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/flag_height"
            android:layout_marginTop="@dimen/margin_flag"
            android:background="@color/color_flag_red"
            android:orientation="vertical"
            android:weightSum="6">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_flag_red" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_flag_white" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/color_flag_blue" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_flag_white" />

        </LinearLayout>

        <!--Denmark-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/flag_height"
            android:layout_marginTop="@dimen/margin_flag"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@color/color_flag_red"
                android:orientation="horizontal"
                android:weightSum="100">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="75"
                    android:background="@color/color_flag_red" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="92"
                    android:background="@color/color_flag_white" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:background="@color/color_flag_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@color/color_flag_red"
                android:orientation="horizontal"
                android:weightSum="100">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="75"
                    android:background="@color/color_flag_red" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="92"
                    android:background="@color/color_flag_white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>