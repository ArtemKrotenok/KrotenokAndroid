<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_compani" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextPersonName"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/user"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:background="#50ffffff"
            android:drawableLeft="@drawable/padlock"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:background="#4B82AC"
            android:fontFamily="@font/monda_regular"
            android:text="LOG IN"
            android:textColor="@color/text_color_button"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:fontFamily="@font/monda_regular"
            android:gravity="center"
            android:text="@string/forgot_your_username_password"
            android:textColor="#F3EEEE"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_create_account"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#969798"
            android:fontFamily="@font/monda_regular"
            android:text="CREATE ACCOUNT"
            android:textColor="@color/text_color_button"
            android:textSize="25dp" />
    </LinearLayout>
</LinearLayout>