<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.gmail.krotenok.PieChartView
                android:id="@+id/viewPieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/viewTextPieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/pie_chart_no_data_text"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </FrameLayout>

        <EditText
            android:id="@+id/editTextPieChart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/activity_profile_text_grey"
            android:ems="20"
            android:fontFamily="@font/monda_bold"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonShowPieChart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/background_color_menu_button"
            android:text="@string/pie_chart_show_button"
            android:textSize="30sp" />
    </LinearLayout>
</FrameLayout>