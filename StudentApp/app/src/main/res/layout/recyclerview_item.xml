<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_view_size_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_student_image"
        android:layout_width="@dimen/image_view_size_item"
        android:layout_height="@dimen/image_view_size_item" />

    <TextView
        android:id="@+id/item_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_view_item_size" />
</LinearLayout>